				</view>
			</view>
			<view class=" scroll-view__X">
				<image class="entrance-icon" src="./img/每日推荐.png"></image>
				<view clsaa="entrance-text">
					<text>排行榜</text>
				</view>
			</view>
			<view class="scroll-view__X">
				<image class="entrance-icon" src="./img/每日推荐.png"></image>
				<view clsaa="entrance-text">
					<text>电台</text>
				</view>
			</view>
			<view class=" scroll-view__X">
				<image class="entrance-icon" src="./img/每日推荐.png"></image>
				<view clsaa="entrance-text">
					<text>直播</text>
