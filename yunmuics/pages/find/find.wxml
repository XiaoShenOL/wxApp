<!-- 引入头部导航栏 -->
<view class="container">

	<!-- 头部轮播图 -->
	<view class="head-swiper__banners">
		<swiper
		 class="swiper-banners"
		 indicator-dots="{{indicatorDots}}"
		 indicator-color="{{indicatorColor}}"
		 indicator-active-color="{{indicatorActiveColor}}"
		 autoplay="{{autoplay}}"
		 interval="{{interval}}"
		 duration="{{duration}}"
		 circular="{{circular}}"
		>
			<block wx:for="{{banners}}" wx:key="index">
				<swiper-item item-id>
					<image class="banners-image" src="{{item.imageUrl}}" />
				</swiper-item>
			</block>
		</swiper>
	</view>
	<!-- 跳转入口 -->
	<view class="head-entrance">
		<scroll-view
		 class="scroll-view"
		 scroll-x="true"
		 bindscroll="scroll"
		 style="width: 100%"
		>
			<view class="scroll-view__X">
				<image class="entrance-icon" src="./img/每日推荐.png"></image>
				<view clsaa="entrance-text">
					<text>每日推荐</text>
				</view>
			</view>
			<view class="scroll-view__X">
				<image class="entrance-icon" src="./img/每日推荐.png"></image>
