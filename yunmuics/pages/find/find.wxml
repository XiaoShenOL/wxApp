			</view>
		</scroll-view>
	</view>
	<!-- 第一层精选 -->
	<view class="page-select">
		<view class="select-title">
			<view class="select-text-front">
				{{blocks[0].uiElement.subTitle.title}}
			</view>
			<view class="select-text-after">
				{{blocks[0].uiElement.button.text}}
			</view>
		</view>
		<view class="select-body">
			<scroll-view
			 class="scroll-view"
			 scroll-x="true"
			 bindscroll="scroll"
			 style="width: 100%"
			>
				<block wx:for="{{blocks[0].creatives}}" wx:key="index">
					<view class="select-box">
						<image class="select-img" src="{{item.uiElement.image.imageUrl}}"></image>
						<text class="select-text" >
          {{item.uiElement.mainTitle.title}}
        </text>
					</view>
				</block>
			</scroll-view>

		</view>
	</view>

	<!-- 第二层华语经典 -->
	<view class="page-play">
		<view class="play-title">
			<view class="play-text-front">
				{{blocks[1].uiElement.subTitle.title}}
			</view>
			<view class="play-text-after">
				<image class="play-text-img" src="./img/播放.png"></image>
				{{blocks[1].uiElement.button.text}}
			</view>
		</view>

		<view class="play-body">

			<view>
				<scroll-view
				 class="scroll-view"
				 scroll-x="true"
				 bindscroll="scroll"
				 style="width: 100%"
				>
					<view
					 class="play-body-outside"
					 wx:for="{{blocks[1].creatives}}"
					 wx:key="index"
					 wx:for-item="creatives"
					>
						<block wx:for="{{creatives.resources}}" wx:key="index">
							<view class="play-box">
								<image class="play-img-bef" src="{{item.uiElement.image.imageUrl}}"></image>
								<view class="play-box-text">
									<view class="box-text-bre">
										<view class="text-bre-one">
											{{item.uiElement.mainTitle.title}}
										</view>
										<view class="text-bre-two">
											- {{item.resourceExtInfo.artists[0].name}}
										</view>
									</view>
									<view class="box-text-aft">
										{{item.uiElement.subTitle.title}}
									</view>
								</view>
								<view class="play-box-img">
									<image class="play-img-aft" src="./img/play.png"></image>
								</view>
							</view>
						</block>
					</view>
				</scroll-view>
			</view>
		</view>
