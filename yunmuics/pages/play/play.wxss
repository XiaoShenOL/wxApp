.background_img {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  /* css3滤镜属性，设置高斯模糊 */
  filter: blur(20px);
  z-index: -1;
  /*和网易云音乐对比了一下，发现他们是也是放大1.5倍*/
  transform: scale(1.5);
}

