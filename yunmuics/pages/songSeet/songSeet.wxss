.container {
  padding: 20rpx;
}

.recommend-head {
  display: flex;
  padding-left: 10rpx;
  justify-content: space-between;
}

.recommend-head__more {
  width: 40rpx;
  height: 40rpx;
}

.content {

}
.content-swiper-item{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.content-swiper-img {
  width: 300rpx;
  height: 300rpx;
  border-radius: 10rpx;
}

.page-swiper {
  height: 400rpx;
}

.content-page-block {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.content-block {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  width: 230rpx;
  font-size: 22rpx;
  margin-bottom: 30rpx;
}

.content-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.content-img image {
  width: 100%;
  height: 100%;
}
.content-text{
  padding:0 18rpx;
}
