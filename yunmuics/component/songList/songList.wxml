<!-- pages/songlist/songlist.wxml -->
<nav-bar></nav-bar>
<view class="wrapper">
	<view class="top">
		<view class="block"></view>
		<view class="title">
			<text class="title-name">飙升榜</text>
			<image class="title-pic" src="img/i .png" />
			<view class="title-num">最近更新：8月1日</view>
		</view>
		<view class="list">
			<view
			 class="listbox"
			 wx:for="{{detail}}"
			 wx:key="index"
			>
				<image class="list-img" src="{{item.img}}" />
				<view class="list-name">{{item.name}}</view>
			</view>
		</view>
	</view>
	<view class="down">
		<view class="buttonBox">
			<image class="broadcast" src="img/cicle.png" />
			<text class="broadcast-name">播放全部</text>
			<text class="broadcast-num">（共100首）</text>
			<view class="collectBox">
				<text class="collect-add">+ 收藏（322.8万）</text>
			</view>
		</view>
		<view class="songlistbox">
			<view
			 class="songlist"
			 wx:for="{{list}}"
			 wx:key="index"
			>
				<text class="songlist-num">{{index+1}}</text>
				<view class="song">
					<view class="song-name">{{item.name}}</view>
					<view class="song-author">{{item.author}}</view>
				</view>
				<image class="broadcast-pic" src="img/rectangle.png" />
				<image class="broadcast-img" src="img/daohang.png" />
			</view>
		</view>
	</view>
</view>

